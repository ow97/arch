gpg --recv-key 1EB2638FF56C0C53
git clone https://aur.archlinux.org/cower
cd cower
makepkg -si
cd ..
git clone https://aur.archlinux.org/pacaur
cd pacaur
makepkg -si
cd ../..

sudo pacman -S wget htop wicd wicd-gtk i3blocks i3lock dmenu compton termite ttf-anonymous ttf-roboto adobe-source-code-pro-fonts adobe-source-sans-pro-fonts adobe-source-serif-pro-fonts-pro feh gimp ranger w3m highlight atool lynx poppler mediainfo chromium pulseaudio pavucontrol atom qemu virt-manager texstudio texlive-most gnuplot openssh sshfs hugin josm ghostscript geogebra
gpg --recv-key 5CC908FDB71E12C2
pacaur -y i3-gaps jetbrains-toolbox google-earth dotnet dotnet-cli dotnet-sdk msbuild-15-bin

ranger --copy-config=all
wget -O background.jpg https://goo.gl/UTLvpN
sudo systemctl enable libvirtd.service

git config --global user.email "ow97@users.noreply.github.com"
git config --global user.name "ow97"

ln -sf ~/git/config/xinitrc ~/.xinitrc
mkdir .config/i3
