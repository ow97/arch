cd ~

mkdir .config
mkdir git
cd git

git clone https://github.com/ow97/config
ln -sf ~/git/config/xinitrc ~/.xinitrc
mkdir ~/.config/i3
ln -sf ~/git/config/i3 ~/.config/i3/config
mkdir ~/.config/i3blocks
ln -sf ~/git/config/i3blocks ~/.config/i3blocks/config
mkdir ~/.config/termite
ln -sf ~/git/config/termite ~/.config/termite/config
mkdir ~/.config/ranger
ln -sf ~/git/config/ranger ~/.config/ranger/rc.conf
mkdir ~/.config/fontconfig
ln -sf ~/git/config/fonts ~/.config/fontconfig/fonts.conf
sudo ln -sf ~/git/config/pacman /etc/pacman.conf
cd ..

read -n 1 -s -p "1 Press any key to continue"

sudo pacman --noconfirm -Syy ntp rkhunter pacmatic jdk8-openjdk openjdk8-doc openjdk8-src xorg xorg-xinit base-devel ntfs-3g maim wget htop wicd wicd-gtk i3blocks i3lock dmenu compton termite ttf-roboto adobe-source-code-pro-fonts adobe-source-sans-pro-fonts adobe-source-serif-pro-fonts feh gimp ranger w3m highlight atool lynx poppler mediainfo chromium pulseaudio pavucontrol atom texstudio texlive-most gnuplot openssh sshfs hugin josm ghostscript geogebra linux-headers linux-hardened-headers virtualbox virtualbox-host-dkms

read -n 1 -s -p "2 Press any key to continue"

git clone https://aur.archlinux.org/cower
cd cower
gpg --recv-key 1EB2638FF56C0C53
makepkg -si
cd ..

git clone https://aur.archlinux.org/pacaur
cd pacaur
makepkg -si
cd ../..

read -n 1 -s -p "3 Press any key to continue"

gpg --recv-key 5CC908FDB71E12C2
pacaur -y i3-gaps acpilight jetbrains-toolbox google-earth dotnet dotnet-cli dotnet-sdk msbuild-15-bin

read -n 1 -s -p "4 Press any key to continue"

wget -O background.jpg https://goo.gl/UTLvpN

git config --global user.email "ow97@users.noreply.github.com"
git config --global user.name "ow97"

mkdir ~/screenshots

sudo pacmatic --noconfirm -Syu
sudo pacman --noconfirm -Rns

read -n 1 -s -p "5 Press any key to continue"

sudo rkhunter --propupd

sudo reboot

# Enable chromium flags "Override software rendering list", "GPU rasterization", "Zero-copy rasterizer"
