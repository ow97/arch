cd ~

mkdir git
mkdir screenshots
mkdir uni

cd ~/git
git clone https://github.com/ow97/config
ln -sf ~/git/config/bash ~/.bashrc
ln -sf ~/git/config/xinitrc ~/.xinitrc
mkdir ~/.config
mkdir ~/.config/i3
ln -sf ~/git/config/i3 ~/.config/i3/config
mkdir ~/.config/i3blocks
ln -sf ~/git/config/i3blocks ~/.config/i3blocks/config
mkdir ~/.config/termite
ln -sf ~/git/config/termite ~/.config/termite/config
mkdir ~/.config/ranger
ln -sf ~/git/config/ranger ~/.config/ranger/rc.conf
mkdir ~/.config/fontconfig
ln -sf ~/git/config/fonts ~/.config/fontconfig/fonts.conf
sudo ln -sf ~/git/config/pacman /etc/pacman.conf
cd ~

sudo pacman --noconfirm -Syy openxenmanager php-cgi rsync numlockx xarchiver p7zip zip unzip unrar xdotool sysstat acpi ntp rkhunter pacmatic jdk8-openjdk openjdk8-doc openjdk8-src xorg xorg-xinit base-devel ntfs-3g maim wget htop wicd wicd-gtk i3blocks i3lock dmenu compton termite ttf-roboto adobe-source-code-pro-fonts adobe-source-sans-pro-fonts adobe-source-serif-pro-fonts feh gimp ranger w3m highlight atool lynx poppler mediainfo chromium pulseaudio pavucontrol atom texstudio texlive-most gnuplot openssh sshfs hugin josm ghostscript geogebra linux-headers linux-hardened-headers virtualbox virtualbox-host-dkms
