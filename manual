# Perform these steps manually to complete the installation

loadkeys uk
timedatectl set-ntp true

fdisk /dev/sda
	n
	p
	<Enter> * 3
	w
mkfs.ext4 /dev/sda1
mount /dev/sda1 /mnt

pacstrap /mnt base linux-hardened intel-ucode grub sudo git

genfstab -U /mnt >> /mnt/etc/fstab

arch-chroot /mnt
cd /tmp
curl -L https://git.io/fAlQf > chroot
bash chroot

exit
reboot

sudo systemctl start dhcpcd.service
cd /tmp
curl -L https://git.io/fAlQI > setup
bash setup
