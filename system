#!/usr/bin/env bash
set -ex
script_dir="$(cd "$(dirname "$0")"; pwd;)";

###############################################################################
# Install packages
###############################################################################

bash "$script_dir/install_official"

sudo -u oliver "$script_dir/install_aur"

# Cleanup dependencies
pacman -Qtdq | pacman --noconfirm -Rns - || true

###############################################################################
# Setup services
###############################################################################

systemctl enable wicd.service

###############################################################################
# Setup users
###############################################################################

sudo -u oliver "$script_dir/oliver"

###############################################################################
# Complete setup
###############################################################################

sed -i '$ d' /etc/sudoers # Remove temporary sudo blanket permissions
sudo reboot
